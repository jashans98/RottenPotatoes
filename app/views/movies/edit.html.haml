%h2 Edit Movie

= form_tag movie_path(@movie), :method=> :put do
  = label :movie, :title, 'Title'
  = text_field :movie, 'title'

  = label :movie, :description, 'Description'
  = text_area :movie, :description, :cols=> "50", :rows => "5"

  = label :movie, :rating, 'Rating'
  = select :movie, :rating, ['G', 'PG', 'PG-13', 'R', 'NC-17']

  = label :movie, :release_date, 'Release Date'
  = date_select :movie, :release_date, :start_year => 1945

  = submit_tag 'Save Changes'

- # form to delete movies
= link_to 'Delete this movie', movie_path(@movie), :method=> :delete
%br
= link_to 'Cancel', movie_path(@movie), :method => :get
